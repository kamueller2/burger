<div class="container">

  <div class="row">

		<div class="col-md-12">
			<img src="/assets/img/burger.png" alt="burger" class="img-fluid">
		</div>

	</div>
  <div class="row">

		<div class="col-md-12">
			<h1 class="text-center text-danger">Eat-Da-Burger</h1>
		</div>
	
	</div>

	<div class="row">

{{!-- Uneaten Burgers --}}
		<div class="col-md-5">
			<h3>Uneaten Burgers</h3>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<p class="burgerType">{{this.burger_name}}</p>
								<form action="api/burgers/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button type="submit" class="btn btn-outline-primary btnDevour">EAT THIS!</button>
								</form>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

{{!-- Eaten Burgers --}}
		<div class="col-md-2"></div>

		<div class="col-md-5">
			<h3 class="text-muted">Eaten Burgers</h3>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h5 class="text-muted"> {{this.burger_name}}</h5>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
  
  </div>

  <br><br>

	<div class="row">

{{!-- Add a Burger --}}
		<div class="col-md-12 text-center">
			<form class="create-update-form" action="api/burgers" method="POST">
				<div class="form-group">
					<textarea type="text" name="name"></textarea><br>
					<button class="btn btn-primary" type="submit">Submit</button>
					<h5 class="text-center">Enter a burger you want to eat and click Submit!</h5>
				</div>
			</form>
		</div>

	</div>

</div>

